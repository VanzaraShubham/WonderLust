<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Create a New Listing</h3>

            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control"
                        required>
                    <div class="valid-feedback"> Title looks good</div>
                </div>

                <br>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="invalid-feedback"> required short a Description </div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload listing image</label>
                    <input type="file" name="listing[image]" id="image" class="form-control" required>
                </div>


                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="1200" type="text" class="form-control" required>
                    <div class="invalid-feedback"> Enter a valid price</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                        <div class="invalid-feedback"> Enter a valid country</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback"> Enter a valid location</div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="category">Category</label>
                        <select name="listing[category]" class="form-control" required>
                            <option value="">-- Select Category --</option>
                            <!-- <option value="Trendings">Trendings</option> -->
                            <option value="Rooms">Rooms</option>
                            <option value="Iconic Cities">Iconic Cities</option>
                            <option value="Mountains">Mountains</option>
                            <option value="Castles">Castles</option>
                            <option value="Amazing Pools">Amazing Pools</option>
                            <option value="Campings">Campings</option>
                            <option value="Farms">Farms</option>
                            <option value="Arctics">Arctics</option>
                            <option value="Domes">Domes</option>
                            <option value="Boats">Boats</option>
                        </select>
                    </div>

                </div>
                <br>
                <button type="submit" class="btn btn-dark add-btn mt-3">Add</button>
                <br><br>
            </form>
        </div>
    </div>